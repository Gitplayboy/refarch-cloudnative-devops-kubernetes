{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Bluecompute Toolchain Deployment to Bluemix",
    "description": "bluecompute toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "deploy-region": {
            "description": "Deploy to this Bluemix Region",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "route-domain": {
            "description": "Domain name. Example: mybluemix.net for runtimes in US-South",
            "type": "string"
        },
        "bluecompute-web-app-name": {
            "description": "App name for Bluecompute web application",
            "type": "string"
        },
        "mysql-database": {
            "description": "Inventory database name",
            "type": "string"
        },
        "mysql-dbuser": {
            "description": "MySQL database user",
            "type": "string"
        },
        "mysql-dbpass": {
            "description": "Password for MySQL database user",
            "type": "string"
        },
        "mysql-root-pass": {
            "description": "Password for MySQL admin user",
            "type": "string"
        },
        "apic-url": {
            "description": "Region specific APIC hostname",
            "type": "string"
        },
        "context-path": {
            "description": "Context path for published APIs",
            "type": "string"
        },
        "inventory-msname": {
            "description": "Product name for Inventory Microservice APIs",
            "type": "string"
        },
        "socialreview-msname": {
            "description": "Product name for Socialreview Microservice APIs",
            "type": "string"
        }
    },
    "required": [
        "deploy-region",
        "deploy-org",
        "deploy-space",
        "route-domain",
        "bluecompute-web-app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Deploy to:"
                },
                {
                    "type": "select",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-org"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Domain name for all routes",
            "key": "route-domain"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "API Connect hostname",
            "key": "apic-url"
        }
    ]
}
